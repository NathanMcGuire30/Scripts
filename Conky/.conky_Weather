###################################################


alignment top_right
own_window_argb_value 0
own_window_argb_visual no
own_window_colour 000000
TEXT
#----------------------------------------
#   CURL
#----------------------------------------
\
\
${execi 300 l=${template9}; l=${l%%_*}; curl -s "api.openweathermap.org/data/2.5/forecast/daily?APPID=${template6}&id=${template7}&cnt=5&units=${template8}&lang=$l" -o ~/.cache/forecast.json}\
${execi 300 l=${template9}; l=${l%%_*}; curl -s "api.openweathermap.org/data/2.5/weather?APPID=${template6}&id=${template7}&cnt=5&units=${template8}&lang=$l" -o ~/.cache/weather.json}\
\
\
#----------------------------------------
#   Misc Images
#----------------------------------------
\
\
${execi 300 cp -f ~/.harmattan-assets/photos/big-4px/$(jq .weather[0].id ~/.cache/weather.json).png ~/.cache/Weather/BigPics/weather.png}${image ~/.cache/Weather/BigPics/weather.png -p 20,25 -s 228x229}\
${image ~/.harmattan-assets/misc/Numix/Comfortable/border.png -p 20,25 -s 228x229}\
${image ~/.harmattan-assets/misc/Numix/Comfortable/bottom-bg.png -p 20,254 -s 228x110}\
${image ~/.harmattan-assets/misc/Numix/Comfortable/separator-v.png -p 95,270 -s 1x83}\
${image ~/.harmattan-assets/misc/Numix/Comfortable/separator-v.png -p 172,270 -s 1x83}\
\
\
#----------------------------------------
#   Day names
#----------------------------------------
\
\
${color2}${voffset 268}${alignc 77}${execi 300 LANG=${template9} LC_TIME=${template9} date +%^a}
${color2}${voffset -17}${alignc}${execi 300 LANG=${template9} LC_TIME=${template9} date -d +1day +%^a}
${color2}${voffset -17}${alignc -77}${execi 300 LANG=${template9} LC_TIME=${template9} date -d +2day +%^a}
\
\
#----------------------------------------
#   Temperatures
#----------------------------------------
\
\
${color2}${voffset 53}${alignc 77}${execi 300 jq -r .list[0].temp.min ~/.cache/forecast.json | awk '{print int($1+0.5)}' # round num}°/${execi 300 jq -r .list[0].temp.max ~/.cache/forecast.json | awk '{print int($1+0.5)}' # round num}°
${color2}${voffset -17}${alignc}${execi 300 jq -r .list[1].temp.min ~/.cache/forecast.json | awk '{print int($1+0.5)}' # round num}°/${execi 300 jq -r .list[1].temp.max ~/.cache/forecast.json | awk '{print int($1+0.5)}' # round num}°
${color2}${voffset -17}${alignc -77}${execi 300 jq -r .list[2].temp.min ~/.cache/forecast.json | awk '{print int($1+0.5)}' # round num}°/${execi 300 jq -r .list[2].temp.max ~/.cache/forecast.json | awk '{print int($1+0.5)}' # round num}°
\
\
#----------------------------------------
#   Conditions
#----------------------------------------
\
\
${color4}${font Droid Sans:size=48}${goto 32}${voffset -204}${execi 300 jq -r .main.temp ~/.cache/weather.json | awk '{print int($1+0.5)}' # round num}°${font}\
${color4}${alignr 54}${voffset -162}${execi 300 jq -r .main.pressure ~/.cache/weather.json | awk '{print int($1+0.5)}' # round num} hPa
${color4}${alignr 54}${voffset 20}${execi 300 jq -r .main.humidity ~/.cache/weather.json | awk '{print int($1+0.5)}' # round num} %
${color4}${alignr 54}${voffset 20}${execi 300 jq -r .wind.speed ~/.cache/weather.json | awk '{print int($1+0.5)}' # round num}${if_match "$template8" == "metric"} m/s${else}${if_match "$template8" == "default"} m/s${else}${if_match "$template8" == "imperial"} mi/h${endif}${endif}${endif}
${color4}${alignr 54}${voffset 20}${execi 300 date -d "@$(jq -r .sys.sunrise ~/.cache/weather.json)" +%-I:%M\ %P}
${color4}${alignr 54}${voffset 20}${execi 300 date -d "@$(jq -r .sys.sunset ~/.cache/weather.json)" +%-I:%M\ %P}
${color4}${font Droid Sans :size=12}${goto 46}${voffset 26}${execi 300 jq -r .weather[0].description ~/.cache/weather.json | sed 's|\<.|\U&|g'}${font}\
\
\
#----------------------------------------
#   Weather icons
#----------------------------------------
\
\
${image ~/.harmattan-assets/misc/Numix/Comfortable/pressure.png -p 224,37 -s 16x16}\
${image ~/.harmattan-assets/misc/Numix/Comfortable/humidity.png -p 224,74 -s 16x16}\
${image ~/.harmattan-assets/misc/Numix/Comfortable/wind-2.png -p 224,111 -s 16x16}\
${image ~/.harmattan-assets/misc/Numix/Comfortable/sunrise.png -p 224,148 -s 16x16}\
${image ~/.harmattan-assets/misc/Numix/Comfortable/sunset.png -p 224,185 -s 16x16}\
${execi 300 cp -f ~/.harmattan-assets/icons/#dcdcdc__32/$(jq .list[0].weather[0].id ~/.cache/forecast.json).png ~/.cache/weather-1.png}${image ~/.cache/weather-1.png -p 42,296 -s 32x32}\
${execi 300 cp -f ~/.harmattan-assets/icons/#dcdcdc__32/$(jq .list[1].weather[0].id ~/.cache/forecast.json).png ~/.cache/weather-2.png}${image ~/.cache/weather-2.png -p 118,296 -s 32x32}\
${execi 300 cp -f ~/.harmattan-assets/icons/#dcdcdc__32/$(jq .list[2].weather[0].id ~/.cache/forecast.json).png ~/.cache/weather-3.png}${image ~/.cache/weather-3.png -p 194,296 -s 32x32}${font}\
